<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-notice" extends="struts-default" namespace="/notice">
		<!-- 转到新闻详细信息页面 -->
		<action name="Detail" class="noticeAction" method="toDetail">
			<result>/WEB-INF/view/front/notice/detail.jsp</result>
		</action>
		
		<!-- 转到新闻列表，首页点击“更多”时触发 -->
		<action name="List" class="noticeAction" method="toList">
			<result>/WEB-INF/view/front/notice/list.jsp</result>
		</action>
	</package>

</struts>